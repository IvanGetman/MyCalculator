<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MyCalculatorStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/midnightBlue</item>
        <item name="colorPrimaryDark">@color/midnightBlue</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/gray</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/mediumBlue</item>
    </style>

    <style name="MyCalculatorStyleDark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:textColorPrimary">@color/mediumBlue</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
    </style>

    <style name="CustomButton" parent="MyCalculatorStyle">
        <item name="android:insetBottom">1dp</item>
        <item name="android:insetTop">1dp</item>
        <item name="android:insetLeft">1dp</item>
        <item name="android:insetRight">1dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:minHeight">88dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomButton.2" parent="CustomButton">
        <item name="android:backgroundTint">@color/mediumBlue</item>
    </style>

    <style name="CustomField" parent="CustomButton">
        <item name="android:background">@color/gray</item>
        <item name="android:textSize">40sp</item>
        <item name="android:paddingTop">15dp</item>
    </style>

</resources>